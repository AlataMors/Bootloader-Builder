+/* #define CONFIG_SYS_MEMTEST_START	0x80010000 */
+/* #define CONFIG_SYS_MEMTEST_END		0x87C00000 */
 
 #define CONFIG_SYS_LOAD_ADDR		CONFIG_LOADADDR
 
@@ -226,5 +299,6 @@
 
